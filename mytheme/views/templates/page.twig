{% extends 'layouts/base.twig' %}

{% block content %}
	<main>
		<div class="mt-16 container max-w-[1280px] mx-auto">
			{{
				include(
					'partials/breadcrumbs.twig',
					{
						items: breadcrumb(post.id)
					}
				)
			}}
		</div>
		<article class="mt-16 container max-w-[1280px] mx-auto">
			<header>
				<h1 class="text-xl font-bold kerning">{{ post.title }}</h1>
				<p class="mt-2 text-sm">
					<time datetime="{{ post.date('Y-m-d H:i:s') }}">{{ post.date }}</time>
				</p>
			</header>

			<div class="mt-8 mb-12 border-t"></div>

			<div class="prose">
				{{ post.content }}
			</div>
		</article>
	</main>
{% endblock %}
