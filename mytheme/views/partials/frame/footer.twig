<footer class="sticky top-full mt-20 py-2 text-sm text-white bg-black">
	<div class="container mx-auto px-7 flex gap-x-6 justify-between">
		<nav>
			<ul class="container flex gap-x-6">
				{% for item in [
					['ホーム', site.url],
					[get_page_post('about').title, get_page_post('about').link],
					[
						function('get_post_type_object', 'mytheme_news').labels.name,
						function('get_post_type_archive_link', 'mytheme_news')
					]
				] %}
					<li><a class="block py-3" href="{{ item[1] }}">{{ item[0] }}</a></li>
				{% endfor %}
			</ul>
		</nav>
	</div>
</footer>
