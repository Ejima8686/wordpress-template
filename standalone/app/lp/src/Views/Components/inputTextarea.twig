{% import "Macros/input.twig" as input %}

<div class="{{ className }}">
	<label for="{{ key }}" class="flex gap-2 items-center">
		{% if required %}
			{{ input.required() }}
		{% endif %}
		<span class="text-[16px]">{{ label }}</span>
	</label>
	<textarea
		id="{{ key }}"
		name="{{ key }}"
		class="border border-border bg-white text-[14px] py-2 px-3 mt-2 w-full resize-none"
		rows="{{ rows ? rows : 10 }}"
		{% if title %}
			title="{{ title }}"
		{% endif %}
		{% if maxlength %}
			maxlength="{{ maxlength }}"
		{% endif %}
		{% if placeholder %}
			placeholder="{{ placeholder }}"
		{% endif %}
		{% if required %}
			required
		{% endif %}
	>{{ value ? value : '' }}</textarea>
</div>
