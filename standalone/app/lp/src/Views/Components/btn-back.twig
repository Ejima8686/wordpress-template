<a
	href="{{ href }}"
	class="
		grid place-items-center bg-size-[200%] hover:bg-right
		mx-auto px-8 py-6 rounded-full
		transition-[background-position] duration-300 ease-in-out
		shadow-submit
		cursor-pointer
		border border-transparent
		group
		{{ className }}
	"
	style="
		background-image:
			linear-gradient(to right, var(--color-white), var(--color-white)),
			linear-gradient(to right, var(--color-theme_orange-1), var(--color-theme_orange-2), var(--color-theme_orange-3));
		background-origin: border-box;
		background-clip: padding-box, border-box;
	"
>
	<span
		class="
			inline-block text-[24px] font-bold
			text-cta_orange group-hover:text-theme_orange-2
			transition-colors duration-300 ease-out
		"
	>
		{{ label }}
	</span>
</a>
